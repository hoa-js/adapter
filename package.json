{
  "name": "@hoajs/adapter",
  "version": "0.1.0",
  "description": "Adapters for Hoa.",
  "main": "./dist/cjs/index.js",
  "type": "module",
  "module": "./dist/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist",
    "types",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "tsup",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "author": "nswbmw",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoa-js/adapter.git"
  },
  "keywords": [
    "hoa",
    "adapter",
    "node",
    "server"
  ],
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "eslint": "9.36.0",
    "globals": "16.4.0",
    "hoa": "*",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "neostandard": "0.12.2",
    "tsup": "8.5.0"
  },
  "peerDependencies": {
    "hoa": "*"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@whatwg-node/server": "0.10.12"
  }
}
